<!DOCTYPE html>
<html>
  <head>
    <title>❤️Style Haven❤️</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-100">
    <!-- Navigation Bar -->
    <nav class="bg-white shadow-md sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <!-- Logo/Brand -->
          <div class="flex-shrink-0">
            <%= link_to root_path, class: "text-2xl font-bold text-gray-800 hover:text-gray-600" do %>
              Fashion Catalogue
            <% end %>
          </div>
          
          <!-- Cart Icon -->
          <div class="flex items-center">
            <%= link_to cart_path, class: "relative" do %>
              <svg class="w-8 h-8 text-gray-800 hover:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
              <% if cart_count > 0 %>
                <span class="absolute -top-2 -right-2 bg-red-500 text-white rounded-full w-6 h-6 flex items-center justify-center text-sm font-bold">
                  <%= cart_count %>
                </span>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </nav>
    
    <!-- Flash Messages -->
    <% if notice %>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-4">
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
          <span class="block sm:inline"><%= notice %></span>
        </div>
      </div>
    <% end %>
    
    <% if alert %>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-4">
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
          <span class="block sm:inline"><%= alert %></span>
        </div>
      </div>
    <% end %>

    <!-- Main Content -->
    <%= yield %>
  </body>
</html>