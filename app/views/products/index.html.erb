<div class="min-h-screen py-10 px-4">
  <!-- Header -->
  <div class="max-w-7xl mx-auto mb-8">
    <h1 class="text-5xl font-bold text-center text-gray-800 mb-4">
      ❤️Style Haven❤️
    </h1>
    <p class="text-center text-gray-600 text-lg">
      Discover our latest collection
    </p>
  </div>
  
  <!-- Search Bar -->
  <div class="max-w-7xl mx-auto mb-6">
    <%= form_with url: products_path, method: :get, local: true, class: "relative" do |f| %>
      <svg class="absolute left-4 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
      </svg>
      <%= f.text_field :search, 
          value: params[:search],
          placeholder: "Search for products...",
          class: "w-full pl-12 pr-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
      <%= f.hidden_field :category, value: params[:category] %>
    <% end %>
  </div>
  
  <!-- Category Filter -->
  <div class="max-w-7xl mx-auto mb-8">
    <div class="flex flex-wrap gap-3">
      <% @categories.each do |category| %>
        <%= link_to products_path(category: category, search: params[:search]), 
            class: "px-6 py-2 rounded-full font-medium transition-colors duration-200 #{params[:category] == category || (category == 'All' && params[:category].blank?) ? 'bg-black text-white' : 'bg-white text-gray-700 hover:bg-gray-200'}" do %>
          <%= category %>
        <% end %>
      <% end %>
    </div>
  </div>
  
  <!-- Results Count -->
  <div class="max-w-7xl mx-auto mb-4">
    <p class="text-gray-600">
      Showing <%= @products.count %> <%= @products.count == 1 ? 'product' : 'products' %>
    </p>
  </div>
  
  <!-- Product Grid -->
  <div class="max-w-7xl mx-auto">
    <% if @products.any? %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        <% @products.each do |product| %>
          <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300">
            <!-- Product Image -->
            <%= link_to product_path(product) do %>
              <div class="h-64 w-full overflow-hidden">
                <%= image_tag product.image_url, 
                    alt: product.name,
                    class: "w-full h-full object-cover hover:scale-105 transition-transform duration-300" %>
              </div>
            <% end %>
            
            <!-- Product Details -->
            <div class="p-4">
              <!-- Category Badge -->
              <span class="text-xs font-semibold text-purple-600 uppercase tracking-wide">
                <%= product.category %>
              </span>
              
              <!-- Product Name -->
              <%= link_to product_path(product) do %>
                <h3 class="text-lg font-bold text-gray-800 mt-2 hover:text-purple-600 transition-colors">
                  <%= product.name %>
                </h3>
              <% end %>
              
              <!-- Price -->
              <p class="text-2xl font-bold text-gray-900 mt-3">
                $<%= sprintf('%.2f', product.price) %>
              </p>
              
              <!-- Add to Cart Button -->
              <%= button_to add_to_cart_path(product), 
                  method: :post,
                  class: "w-full bg-black text-white py-2 px-4 rounded-md mt-4 hover:bg-gray-800 transition-colors duration-200 flex items-center justify-center gap-2" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
                Add to Cart
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-16">
        <p class="text-xl text-gray-500">No products found matching your search.</p>
      </div>
    <% end %>
  </div>
</div>