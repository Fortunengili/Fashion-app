<div class="min-h-screen py-10 px-4">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold text-gray-800 mb-8">Shopping Cart</h1>
    
    <% if @cart_items.any? %>
      <div class="bg-white rounded-lg shadow-lg p-6">
        <!-- Cart Items -->
        <% @cart_items.each do |item| %>
          <div class="flex items-center gap-4 py-4 border-b last:border-b-0">
            <%= image_tag item[:product].image_url, 
                alt: item[:product].name,
                class: "w-24 h-24 object-cover rounded" %>
            
            <div class="flex-1">
              <h3 class="text-lg font-bold text-gray-800">
                <%= item[:product].name %>
              </h3>
              <p class="text-gray-600">
                $<%= sprintf('%.2f', item[:product].price) %> Ã— <%= item[:quantity] %>
              </p>
            </div>
            
            <div class="text-right">
              <p class="text-xl font-bold text-gray-900">
                $<%= sprintf('%.2f', item[:product].price * item[:quantity]) %>
              </p>
              <%= button_to remove_from_cart_path(item[:product].id), 
                  method: :delete,
                  class: "text-red-600 hover:text-red-800 mt-2 text-sm" do %>
                Remove
              <% end %>
            </div>
          </div>
        <% end %>
        
        <!-- Total -->
        <div class="mt-6 pt-6 border-t">
          <div class="flex justify-between items-center text-2xl font-bold">
            <span>Total:</span>
            <span>$<%= sprintf('%.2f', @total) %></span>
          </div>
        </div>
        
        <!-- Actions -->
        <div class="mt-6 flex gap-4">
          <%= link_to products_path, class: "flex-1 bg-gray-200 text-gray-800 py-3 px-6 rounded-md text-center hover:bg-gray-300 transition-colors" do %>
            Continue Shopping
          <% end %>
          
          <%= button_to clear_cart_path, 
              method: :delete,
              data: { confirm: "Are you sure you want to clear your cart?" },
              class: "flex-1 bg-red-600 text-white py-3 px-6 rounded-md hover:bg-red-700 transition-colors" do %>
            Clear Cart
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow-lg p-12 text-center">
        <svg class="w-24 h-24 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
        <h2 class="text-2xl font-bold text-gray-800 mb-2">Your cart is empty</h2>
        <p class="text-gray-600 mb-6">Add some items to get started!</p>
        <%= link_to products_path, class: "inline-block bg-black text-white py-3 px-8 rounded-md hover:bg-gray-800 transition-colors" do %>
          Start Shopping
        <% end %>
      </div>
    <% end %>
  </div>
</div>